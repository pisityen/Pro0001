<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Asset Request Approval</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h2>Asset Request Approval</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Request ID</th>
          <th>User</th>
          <th>Items</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody id="approvalTableBody">
        <!-- Rows will be dynamically populated -->
      </tbody>
    </table>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const approvalTableBody = document.getElementById("approvalTableBody");

      // Fetch requests from API
      fetch("/api/asset-requests")
        .then(response => response.json())
        .then(data => {
          data.forEach((request, index) => {
            const row = document.createElement("tr");
            row.innerHTML = `
              <td>${index + 1}</td>
              <td>${request.req_id}</td>
              <td>${request.user_name} (${request.user_department})</td>
              <td>${request.request_items.map(item => `${item.item_name} (${item.item_quantity})`).join(", ")}</td>
              <td>${request.req_status}</td>
              <td>
                <button class="btn btn-success btn-sm approve" data-id="${request.req_id}">Approve</button>
                <button class="btn btn-danger btn-sm reject" data-id="${request.req_id}">Reject</button>
              </td>
            `;
            approvalTableBody.appendChild(row);

            // Add approve/reject functionality
            row.querySelector(".approve").addEventListener("click", function () {
              updateRequestStatus(request.req_id, "Approved");
            });
            row.querySelector(".reject").addEventListener("click", function () {
              updateRequestStatus(request.req_id, "Rejected");
            });
          });
        })
        .catch(err => console.error(err));

      function updateRequestStatus(reqId, status) {
        fetch(`/api/asset-requests/${reqId}`, {
          method: "PUT",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ req_status: status }),
        })
          .then(response => response.json())
          .then(data => {
            alert(`Request ${status} successfully!`);
            location.reload(); // Reload to refresh the table
          })
          .catch(err => {
            console.error(err);
            alert("Error updating request status.");
          });
      }
    });
  </script>
</body>
</html>
