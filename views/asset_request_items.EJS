<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>IT Support</title>

  <!-- CSS -->
  <link rel="stylesheet" href="/css/bar.css" />
  <link rel="stylesheet" href="/css/styles.css" />

  <!-- Bootstrap 5.3 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>

<body>
  <div class="main-container d-flex">

      <!-- Sidebar -->
      <div class="sidebar bg-dark text-white vh-100 d-flex flex-column" id="side_nav">
        <!-- ส่วนเนื้อหาใน Sidebar -->
        <div class="header-box px-3 pt-3 pb-4 d-flex justify-content-between align-items-center">
          <h1 class="fs-5 text-uppercase">
            <span class="bg-white text-dark rounded shadow px-2 me-2">IT</span>
            <span class="text-white">Management</span>
          </h1>
        </div>
        <ul class="list-unstyled px-2">
          <li class="mb-2">
          <% if (role === 'admin') { %><a href="/dashboard" class="text-decoration-none px-3 py-3 d-block rounded text-white active-link">Dashboard</a><% } %>
          </li>
          <% if (role === 'admin') { %><li class="mb-2"><a href="/asset_management" class="text-decoration-none px-3 py-3 d-block rounded text-white active-link">ข้อมูลทรัพย์สิน</a></li><% } %>
          <li class="mb-2"><a href="/asset_requests" class="text-decoration-none px-3 py-3 d-block rounded text-white active-link">เบิกทรัพย์สิน</a></li>
          <li class="mb-2"><a href="/all_transfers" class="text-decoration-none px-3 py-3 d-block rounded text-white active-link">โอนทรัพย์สิน</a></li>
            <% if (role === 'admin') { %><a href="/account" class="text-decoration-none px-3 py-3 d-block rounded text-white active-link">ข้อมูลผู้ใช้งาน</a><% } %></li>
        </ul>
        <div class="mt-auto px-2 pb-3 text-center">
          <div class="text-white mb-2">
            User : <%= user_name %>
          </div>
          <div class="text-white mb-2">
            Role : <%= role %>
          </div>
          <a href="/logout" class="btn btn-danger text-decoration-none px-3 py-2 w-100">
            <i class="fas fa-sign-out-alt me-2"></i> Logout
          </a>
        </div>
      </div>
  
        <!-- //หน้าจอหลัก// -->
    
    <div class="container mt-4">
    <h2>Request #<%= request.req_asset_id %> - Status: <%= request.req_status %></h2>
    <p>User ID: <%= request.req_user_id %></p>
    <p>Reason: <%= request.req_reason %></p>

    <hr>

    <h3>Items</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Item Name</th>
          <th>Quantity</th>
          <th>Item Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (items && items.length > 0) { %>
          <% items.forEach(item => { %>
            <tr>
              <td><%= item.item_name %></td>
              <td><%= item.item_quantity %></td>
              <td><%= item.item_status %></td>
              <% if (role === 'admin') { %><td>
                <!-- ปุ่ม Approve -->
                <button class="btn btn-success btn-sm"
                        onclick="approveItem(<%= item.item_id %>, 'Approved')">
                  Approve
                </button>
                <!-- ปุ่ม Reject -->
                <button class="btn btn-danger btn-sm"
                        onclick="approveItem(<%= item.item_id %>, 'Rejected')">
                  Reject
                </button>
              </td><% } %>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-center">No items found</td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <!-- ปุ่มกลับไปหน้าใบงานทั้งหมด -->
    <a href="/asset_requests" class="btn btn-secondary">Back to All Requests</a>
  </div>


    <!-- End Main Content -->

  </div>
  <!-- End main-container -->


  <script>
    function approveItem(item_id, action) {
      // เรียก SweetAlert2 แทน prompt
      Swal.fire({
        title: action === 'Approved' ? 'อนุมัติรายการ' : 'ปฏิเสธรายการ',
        text: 'กรอกเหตุผล (ถ้ามี):',
        input: 'text',
        inputPlaceholder: 'ระบุเหตุผล...',
        showCancelButton: true,
        confirmButtonText: action === 'Approved' ? 'ยืนยันอนุมัติ' : 'ยืนยันปฏิเสธ',
        cancelButtonText: 'ยกเลิก',
        inputValidator: (value) => {
          // ไม่จำเป็นต้องกำหนดเหตุผล ก็ให้ผ่านได้
          return null;
        }
      }).then((result) => {
        if (!result.isConfirmed) return;  // ถ้ากด Cancel หรือปิด dialog
        const admin_comment = result.value;  // ค่าที่ผู้ใช้กรอก (อาจเป็น empty string)
  
        // ถ้าต้องการส่ง req_asset_id ด้วย ให้ดึงจาก EJS
        const req_asset_id = '<%= request.req_asset_id %>';

  
        fetch(`/api/asset_request_items/${item_id}/approve`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ action, admin_comment, req_asset_id})
        })
        .then(res => res.json())
        .then(data => {
          if (data.error) {
            Swal.fire({
              icon: 'error',
              title: 'ไม่สำเร็จ',
              text: data.error
            });
          } else {
            Swal.fire({
              icon: 'success',
              title: 'สำเร็จ',
              text: data.message || 'อัปเดตสถานะเรียบร้อยแล้ว',
              timer: 1500,
              showConfirmButton: false
            }).then(() => {
              window.location.reload();
            });
          }
        })
        .catch(err => {
          console.error(err);
          Swal.fire({
            icon: 'error',
            title: 'เกิดข้อผิดพลาด',
            text: err.message
          });
        });
      });
    }
  </script>


<!--                                                                                                     -->
  
    
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <!-- Script.js (ถ้ามี) -->
  <script src="/script.js"></script>
</body>
</html>
